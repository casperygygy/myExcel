{
	"parser": "babel-eslint",
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},

	"rules": {
		"linebreak-style": ["error", "windows"],
		"semi": "off",
		"indent": ["error", "tab"],
		"no-tabs": "off",
		"eol-last": 0,
		"require-jsdoc": "off"
	},
	
	"extends": ["eslint:recommended", "google"]
}